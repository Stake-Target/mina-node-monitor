{
    "name": "@olton/mina-monitor",
    "version": "1.1.2",
    "license": "MIT",
    "type": "module",
    "scripts": {
        "serve": "shx rm -rf output/* && parcel serve --open --target browser --out-dir output client/index.html -p 2222",
        "prebuild": "shx rm -rf dist/*",
        "build": "parcel build --out-dir dist --public-url . --no-source-maps client/index.html",
        "start": "npm run serve",
        "client": "npm run serve",
        "server": "node --trace-warnings server/monitor.mjs"
    },
    "devDependencies": {
        "less": "^4.1.1",
        "parcel-bundler": "^1.12.5",
        "parcel-plugin-static-files-copy": "^2.6.0",
        "shx": "^0.3.3"
    },
    "dependencies": {
        "node-fetch": "^2.6.1",
        "systeminformation": "^5.7.7"
    },
    "staticFiles": {
        "staticPath": [
            "client/config.json"
        ]
    },
    "browserslist": [
        "last 2 Chrome versions",
        "last 2 Firefox versions",
        "last 2 Opera versions",
        "last 2 Edge versions"
    ]
}
