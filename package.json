{
    "name": "@olton/mina-node-monitor",
    "version": "1.0.0",
    "main": "./src/index.js",
    "license": "MIT",
    "type": "module",
    "scripts": {
        "serve": "xcopy html\\config.json output\\*.* /Y && parcel serve --open -d output -p 2222 --no-cache html/index.html",
        "build_site": "xcopy html\\config.json dist\\*.* /Y /I && parcel build -d dist --public-url . --no-minify html/index.html",
        "build": "rimraf -rf dist bin && npm run build_site"
    },
    "devDependencies": {
        "@babel/cli": "^7.13.16",
        "@babel/core": "^7.13.16",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/plugin-transform-modules-commonjs": "^7.13.8",
        "@babel/plugin-transform-runtime": "^7.13.15",
        "@babel/preset-env": "^7.13.15",
        "babel-loader": "^8.2.2",
        "@babel/runtime": "^7.13.10",
        "cssnano": "^5.0.1",
        "eslint": "^7.25.0",
        "glob": "^7.1.6",
        "jest": "^26.6.3",
        "rimraf": "^3.0.2"
    },
    "dependencies": {
        "node-fetch": "^2.6.1",
        "systeminformation": "^5.6.12"
    }
}
